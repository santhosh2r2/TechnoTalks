---
// CardItem.astro

import { Icon } from '@astrojs/starlight/components';

interface Props {
  title: string;
  icon: string;
  iconColor: string;
  description: string;
  url: string;
}

const { title, icon, iconColor, description, url } = Astro.props;
---

